    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch file",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}"
        },
        
        {
            "name": "Sync Debug",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/server",
            "cwd": "${workspaceFolder}",
            "env": {
                "BLOCK_HEADERS_URL": "http://localhost:8080",
                "PUBSUB_URL": "redis://localhost:6380",
                "REDIS_BEEF": "redis://localhost:6666",
                "MONGO_URL": "mongodb://mongo:mongo@localhost:27017",
            },
            "args": [
                "-p=8000",
                "-s=true"
            ]
        },
        {
            "name": "Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/server",
            "cwd": "${workspaceFolder}",
            "env": {
                "BLOCK_HEADERS_URL": "http://localhost:8080",
                "PUBSUB_URL": "redis://localhost:6380",
                "REDIS_BEEF": "redis://localhost:6666",
                "MONGO_URL": "mongodb://mongo:mongo@localhost:27017",
            },
            "args": [
                "-p=8000"
            ]
        }
    ]
}