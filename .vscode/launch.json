    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch file",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}"
        },
        
        {
            "name": "Sync Debug",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/server/server.go",
            "cwd": "${workspaceFolder}",
            "env": {
                "BLOCK_HEADERS_URL": "http://rack:8082",
                "REDIS": "redis://localhost:6666"
            },
            "args": [
                "-p=3001",
                "-s=true"
            ]
        },
        {
            "name": "Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/server/server.go",
            "cwd": "${workspaceFolder}",
            "env": {
                "BLOCK_HEADERS_URL": "http://localhost:8080",
                "REDIS": "redis://localhost:6666"
            },
            "args": [
                "-p=3000"
            ]
        }
    ]
}